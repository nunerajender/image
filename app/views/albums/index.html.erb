
  <h1>Albums</h1>
  <%= link_to 'New', new_album_path%>
  <p></p>
  <ul >
    <% @albums.each do |album| %>
        <li id="album_id" <%= album.id %>">


            <% if album.album_images.first %>
                <%= link_to image_tag(album.album_images.first.image.url), album_path(album) %>
            <% else %>
                N/A
            <% end %>

              <p >
                <%= album.title.truncate(14) %>
                <%= link_to "Show", album_path(album) %>
                <%= link_to "Edit", edit_album_path(album) %>
                <%= link_to "Delete", album,
                            :data => { :confirm => "Are you sure?" },
                            :method => :delete                %>
              </p>

        </li>
    <% end %>
  </ul>


